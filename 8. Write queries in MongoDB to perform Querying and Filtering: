])
db.products.find()
db.createCollection("posts")
db.posts.insertMany([
{ id: 1, title: "MongoDB Basics", createdAt: ISODate("2025-09-01") },
{ id: 2, title: "CRUD Operations", createdAt: ISODate("2025-08-20") },
{ id: 3, title: "Aggregation", createdAt: ISODate("2025-07-10") },
{ id: 4, title: "Indexing", createdAt: ISODate("2025-09-15") }
])
db.posts.find()
db.posts.insertOne({
id: 5,
title: "Recent MongoDB Update",
createdAt: new Date()
})
db.products.find({
category: "Electronics",
price: { $gte: 50, $lte: 100 }
})

db.posts.find({

createdAt: {
$gte: new Date(new Date().setDate(new Date().getDate() - 30))
}
}).sort({ createdAt: -1 })
